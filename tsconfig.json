{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "@demo/build": ["build/src"],
      "@demo/prisma": ["prisma/src/index.ts"],
      "@demo/app-working": ["app-working"]
    }
  },
  "exclude": ["dist", ".next", "out", "next.config.js"],
  "include": ["typings/*.d.ts", "**/*.ts", "**/*.tsx"]
}
